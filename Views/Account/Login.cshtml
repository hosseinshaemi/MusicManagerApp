@model Spotify.Models.DTOs.LoginDto
@{
    ViewData["Title"] = "Login";
}

<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" asp-area="" asp-controller="Account"
            asp-action="Login" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-register" data-mdb-toggle="pill" role="tab" aria-controls="pills-register"
            aria-selected="false" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
</ul>

<div class="tab-content">
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <form asp-action="Login" method="POST">

            <div class="form-outline mb-4">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="email ..." required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-outline mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="password ..." required />
            </div>

            <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                    <div class="form-check mb-3 mb-md-0">
                        <input class="form-check-input" asp-for="RememberMe" checked />
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>
                </div>

                <div class="col-md-6 d-flex justify-content-center">
                    <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">Sign in</button>

            <div class="text-center">
                <p>Not a member? <a asp-area="" asp-controller="Account" asp-action="Register">Register</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}