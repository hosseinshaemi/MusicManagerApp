@model Spotify.Models.DTOs.ChangePasswordDto
@{
    ViewData["Title"] = "Change Password";
}

<h1>Change Password</h1>
@if (ViewBag.IsSuccess != null)
{
    <div class="alert alert-success">
        <p class="help-block">Password changed successfully.</p>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" method="POST">
            <div class="form-group">
                <label asp-for="LastPassword" class="control-label"></label>
                <input asp-for="LastPassword" class="form-control" />
                <span asp-validation-for="LastPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
